<h1>Listing foods</h1>

<table>
  <tr>
    <th>Category</th>
    <th>Name</th>
    <th>Calories</th>
  </tr>

<% @foods.each do |food| %>
  <tr>
    <td><%=h food.category %></td>
    <td><%=h food.name %></td>
    <td><%=h food.calories %></td>
    <td><%= link_to 'Show', food %></td>
    <td><%= link_to 'Edit', edit_food_path(food) %></td>
    <td><%= link_to 'Destroy', food, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New food', new_food_path %>